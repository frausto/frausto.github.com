!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    = stylesheet_link_tag "site.css"
    = favicon_tag 'favicon.png'
  %body{:class => page_classes}
    #navigation
      .nav_item.header
        %span.bracket {
        %span.headline frausto llc
        %span.bracket }
        %h3 it consultancy focused on agile development and custom web apps
      #site_links
        = link_to "Home", "#home", :class => "nav_item nav_link", :id => "home_link"
        = link_to "Portfolio", "#portfolio", :class => "nav_item nav_link", :id => "portfolio_link"
        = link_to "Blog", "#blog", :class => "nav_item nav_link", :id => "blog_link"
        = link_to "About", "#about", :class => "nav_item nav_link", :id => "about_link"
        = link_to "Contact", "#contact", :class => "nav_item nav_link", :id => "contact_link"

    %div{:id => "main", :role => "main"}
    #hidden_images
  = javascript_include_tag "app.js"